{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "rootDir": "src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "incremental": true,
    "types": ["../../packages/types/electron.d.ts"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
