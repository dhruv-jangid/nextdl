{
  "name": "nextdl",
  "version": "2.3.1",
  "private": true,
  "author": "dhruvjangid",
  "description": "YouTube & Instagram Content Downloader",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "bun run build:web && bun run build:desktop",
    "build:web": "turbo build -F web && bun run fixfont",
    "build:desktop": "turbo build -F desktop",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:desktop": "bun build:web && turbo -F desktop dev",
    "fixfont": "bun run packages/scripts/fixFontPath.ts",
    "clean": "bun cleanbuild && rm -rf apps/desktop/node_modules apps/web/node_modules bun.lock",
    "cleanbuild": "rm -rf apps/desktop/build apps/web/.turbo apps/web/.next apps/desktop/.turbo .turbo",
    "publish": "bun build:web && turbo -F desktop publish",
    "down": "bun run packages/scripts/downloadBinaries.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.5.2",
    "adm-zip": "^0.5.16",
    "fs-extra": "^11.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": ""
  },
  "packageManager": "bun@1.2.21"
}
