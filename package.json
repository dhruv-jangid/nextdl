{
  "name": "NextYT",
  "version": "0.1.0",
  "private": true,
  "main": "out/main.js",
  "author": "dhruvjangid",
  "description": "YouTube to MP4/MP3",
  "scripts": {
    "dev:next": "next dev --turbopack",
    "dev:electron": "npm run transpile && electron .",
    "build": "next build && npm run transpile && rm -rf node_modules/@img && electron-builder",
    "publish": "next build && npm run transpile && rm -rf node_modules/@img && electron-builder --publish always",
    "start": "next build && npm run transpile && electron .",
    "transpile": "tsc --project main/tsconfig.json",
    "clean": "rm -rf .next out",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json && npm i"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.5.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.2.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  }
}
